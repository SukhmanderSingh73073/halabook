<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corners_mask"
    android:padding="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/service_image"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        />


    <TextView
        android:id="@+id/txt_dec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn on your location to find the best salons near you"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"


        >

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/secondry_btn_bg"
            android:text="No"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/btn_bg"
            android:text="Yes"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_20sdp"

            />

    </LinearLayout>

</LinearLayout>